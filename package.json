{
  "name": "qgen",
  "version": "0.0.0-development",
  "description": "Generate files from templates",
  "bin": {
    "qgen": "./bin/cli.js"
  },
  "watch": {
    "build-and-test": {
      "patterns": [
        "test/fixtures/*/src/**/*",
        "test/fixutres/*/expected/**/*",
        "test/*.js",
        "src/*.js",
        "index.js"
      ]
    }
  },
  "scripts": {
    "build": "babel src/ -d ./dist/",
    "watch:test": "npm-watch build-and-test",
    "unit-test": "ava",
    "lint": "xo",
    "build-and-test": "npm run build && npm run unit-test",
    "test": "npm run lint && npm run build-and-test",
    "prepare": "npm run snyk-protect; npm run build",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once",
    "snyk-protect": "snyk protect"
  },
  "repository": "saneef/qgen",
  "keywords": [
    "cli",
    "generator",
    "templates",
    "files"
  ],
  "author": "Saneef Ansari <hello@saneef.com> (https://saneef.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/saneef/qgen/issues"
  },
  "homepage": "https://github.com/saneef/qgen#readme",
  "dependencies": {
    "chalk": "^3.0.0",
    "globby": "^10.0.1",
    "handlebars": "^4.5.3",
    "inquirer": "^7.0.0",
    "is-relative": "^1.0.0",
    "meow": "^6.0.0",
    "mkdirp": "^0.5.1",
    "nested-error-stacks": "^2.1.0",
    "redent": "^3.0.0",
    "snyk": "^1.258.1"
  },
  "devDependencies": {
    "assert-dir-equal": "^1.1.0",
    "ava": "^2.4.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-preset-env": "^1.7.0",
    "cpy": "^8.0.0",
    "del": "^5.1.0",
    "execa": "^4.0.0",
    "npm-watch": "^0.6.0",
    "semantic-release": "^15.13.31",
    "xo": "^0.25.3"
  },
  "xo": {
    "esnext": true,
    "ignores": [
      "test/fixtures/**"
    ]
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "failWithoutAssertions": false
  },
  "snyk": true
}
